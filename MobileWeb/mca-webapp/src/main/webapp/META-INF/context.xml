<?xml version="1.0"?>
<Context path="" docBase="${docBase}" debug="0" reloadable="true">
    <Resource name="${jniName}"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="${jdbcDriver}"
              url="${jdbcUrl}"
              initialSize="10"
              maxActive="25"
              removeAbandoned="true"
              logAbandoned="true"/>
</Context>
